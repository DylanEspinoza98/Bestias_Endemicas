<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainSur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sur"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="@string/Titulo_Sur"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <!-- Filtros -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGrupoFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginBottom="16dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTodos"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/todos" />

            <com.google.android.material.chip.Chip
                android:id="@+id/TagTerrestre"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terrestre" />

            <com.google.android.material.chip.Chip
                android:id="@+id/TagVolador"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volador" />

            <com.google.android.material.chip.Chip
                android:id="@+id/TagAcuatico"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acuatico" />

        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
        android:id="@+id/contenedorAnimalesS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


       <!-- HUILLIN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_animal_card"
            android:padding="16dp"
            android:tag="terrestre">

            <ImageView
                android:id="@+id/img_Huillin"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/huillin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/huillin"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/info_Huillin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inf_Huillin"
                android:textColor="#424242"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btn_ver_mas_Hullin"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:text="@string/ver"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- RANITA DARWIN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_animal_card"
            android:padding="16dp"
            android:tag="terrestre">


            <ImageView
                android:id="@+id/img_Rana_darwing"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rana_de_darwin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ranitadedarwin"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/info_ranitadedarwin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inf_RanitaDarwin"
                android:textColor="#424242"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btn_ver_mas_RanitaD"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:text="@string/ver"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- FOCA CANGREJERA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_animal_card"
            android:padding="16dp"
            android:tag="acuatico">

            <ImageView
                android:id="@+id/img_FocaCangrejera"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/foca_cangrejera_caracteristicas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/focacangrejera"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/Info_FlamencoChileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inf_FocaCangrejera"
                android:textColor="#424242"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btn_ver_mas_FocaCangrejera"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="@string/ver"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- TUCUQUERA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_animal_card"
            android:padding="16dp"
            android:tag="volador">

            <ImageView
                android:id="@+id/img_Tucuquera"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tucu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tucuquere"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/Info_Tucuquere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inf_Tucuquere"
                android:textColor="#424242"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btn_ver_mas_Tucuquere"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="@string/ver"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- CONCON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_animal_card"
            android:padding="16dp"
            android:tag="volador">

            <ImageView
                android:id="@+id/img_Concon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/concon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/concon"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/Info_Concon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inf_Concón"
                android:textColor="#424242"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btn_ver_mas_Concon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="@string/ver"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- Botón Volver -->
            <Button
                android:id="@+id/btnVolverS"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FF5722"
                android:text="@string/Txt_Btn_Volver"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>