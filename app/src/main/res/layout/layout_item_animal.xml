<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp"
    android:background="@drawable/bg_animal_card"
    android:padding="16dp">

    <!-- Imagen del animal -->
    <ImageView
        android:id="@+id/iv_foto_animal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:src="@drawable/ic_animal_placeholder" />

    <!-- Nombre del animal -->
    <TextView
        android:id="@+id/tv_nombre_animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Animal"
        android:textAlignment="center"
        android:textColor="#2E7D32"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Descripción del animal -->
    <TextView
        android:id="@+id/tv_descripcion_animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del animal..."
        android:textColor="#424242"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- Indicador de favorito -->
    <TextView
        android:id="@+id/tv_favorito_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ Favorito"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Botón Ver más -->
        <Button
            android:id="@+id/btn_ver_mas_animal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="@string/ver"
            android:textSize="12sp"
            android:backgroundTint="#4CAF50"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Botón Editar -->
        <Button
            android:id="@+id/btn_editar_animal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="✏️ Editar"
            android:textSize="12sp"
            android:backgroundTint="#2196F3"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btn_eliminar_animal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="🗑️ Eliminar"
            android:textSize="12sp"
            android:backgroundTint="#F44336"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>
