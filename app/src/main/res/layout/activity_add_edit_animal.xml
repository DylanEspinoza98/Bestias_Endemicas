<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_centro"
    android:padding="16dp">

    <!-- Título colorido -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🐾 Información del Animal 🐾"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Campo Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E8F5E8"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🦊 Nombre del Animal"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText con letras negras sobre fondo blanco -->
                <EditText
                    android:id="@+id/et_nombre_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Puma de los Andes"
                    android:inputType="textCapWords"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Campo Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E3F2FD"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📝 Descripción"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText con letras negras sobre fondo blanco -->
                <EditText
                    android:id="@+id/et_descripcion_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe las características del animal..."
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:gravity="top"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Sección Imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF3E0"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📷 Imagen del Animal"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_seleccionar_imagen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📱 Seleccionar desde Galería"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- Preview de imagen -->
                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/iv_preview_imagen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_animal_placeholder"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <!-- Sección Audio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFDE7"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎵 Audio del Animal (MP3)"
                    android:textStyle="bold"
                    android:textColor="#FBC02D"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_audio_filename"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ningún archivo seleccionado"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn_select_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar"
                        android:backgroundTint="#FFC107"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>



            <!-- Campo Región separado con diseño original -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3E5F5"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗺️ Región"
                    android:textStyle="bold"
                    android:textColor="#7B1FA2"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_region"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#FFFFFF"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Campo Tipo separado con el mismo diseño de los campos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E5F3EB"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Tipo"
                    android:textStyle="bold"
                    android:textColor="#00796B"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:entries="@array/animal_tipos" />
            </LinearLayout>

            <!-- Checkbox Favorito con diseño colorido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEBEE"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp">

                <CheckBox
                    android:id="@+id/cb_es_favorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ Marcar como favorito"
                    android:textColor="#C2185B"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Botones con diseño colorido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_cancelar_animal"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="❌ Cancelar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:elevation="6dp"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/btn_guardar_animal"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="✅ Guardar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:elevation="6dp"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>
</LinearLayout>